<div class="container">
  <h1>To Do</h1>
  <ol>
    <% @tasks.each do |task| %>
      <% if task.completed %>
        <li><i class="fa-solid fa-square-check"></i> <%= link_to task.title, task_path(task), class: "blockquote" %> <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
            class: "text-danger" do %>
            <i class="fa-solid fa-trash"></i>
            <% end %></li>
      <% else %>
        <li><i class="fa-regular fa-square"></i> <%=link_to task.title, task_path(task), class: "blockquote" %> <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
            class: "text-danger" do %>
            <i class="fa-solid fa-trash"></i>
            <% end %></li>
      <% end %>
    <% end %>
  </ol>

  <div class="btn btn-primary">
  <i class="fa-solid fa-file-pen"></i> <%= link_to "Add new Task", new_task_path, class: "text-white" %>
  </div>
</div>
